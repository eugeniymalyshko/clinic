<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/css/styles.css" />
    <title>КМКЛ №5</title>
  </head>

  <body>
    <div class="wrapper">
      <!-- @import header.html -->
      <main class="main">
        <section class="main__hero hero-main">
          <div class="hero-main__contaier">
            <div class="hero-main__body _ibg">
              <img src="../assets/img/hero.jpg" alt="Баннер" />
            </div>
          </div>
        </section>
        <section class="main__departments departments-main">
          <div class="departments-main__container">
            <h2 class="departments-main__title title title_h2">Відділення</h2>
            <!-- Accordion -->
            <div
              class="departments-main__accordion accordion"
              aria-label="Аккордеон відділення"
              data-single
            >
              <!-- accordion button 1 -->
              <div class="accordion__header">
                <button
                  id="accordion-1"
                  class="accordion__button"
                  aria-expanded="true"
                  aria-controls="panel-1"
                  >Багатопрофільна лікарня
                </button>
              </div>
              <!-- accordion content 1 -->
              <div
                id="panel-1"
                class="accordion__content"
                role="region"
                aria-labelledby="accordion-1"
              >
                <div class="accordion__card">
                  <img
                    src="../assets/img/departments/hospital.svg"
                    alt="Іконка"
                  />
                  <h6 class="accordion__title title title_h6"
                    >Приймальне <br />відділення</h6
                  >
                </div>
                <div class="accordion__card">
                  <img
                    src="../assets/img/departments/diagnostic.svg"
                    alt="Іконка"
                  />
                  <h6 class="accordion__title title title_h6"
                    >Діагностичне <br />відділення</h6
                  >
                </div>
                <div class="accordion__card">
                  <img
                    src="../assets/img/departments/reabilitation.svg"
                    alt="Іконка"
                  />
                  <h6 class="accordion__title title title_h6"
                    >Реабілітаційне <br />відділення</h6
                  >
                </div>
                <div class="accordion__card">
                  <img
                    src="../assets/img/departments/therapy.svg"
                    alt="Іконка"
                  />
                  <h6 class="accordion__title title title_h6"
                    >Терапевтичне <br />відділення №1</h6
                  >
                </div>
                <div class="accordion__card">
                  <img
                    src="../assets/img/departments/therapy.svg"
                    alt="Іконка"
                  />
                  <h6 class="accordion__title title title_h6"
                    >Терапевтичне <br />відділення №2</h6
                  >
                </div>
                <div class="accordion__card">
                  <img src="../assets/img/departments/pulse.svg" alt="Іконка" />
                  <h6 class="accordion__title title title_h6"
                    >Кардіологічне <br />відділення</h6
                  >
                </div>
                <div class="accordion__card">
                  <img src="../assets/img/departments/brain.svg" alt="Іконка" />
                  <h6 class="accordion__title title title_h6"
                    >Неврологічне <br />відділення</h6
                  >
                </div>
                <div class="accordion__card">
                  <img
                    src="../assets/img/departments/scissors.svg"
                    alt="Іконка"
                  />
                  <h6 class="accordion__title title title_h6"
                    >Хірургічне <br />відділення</h6
                  >
                </div>
                <div class="accordion__card">
                  <img
                    src="../assets/img/departments/anestesia.svg"
                    alt="Іконка"
                  />
                  <h6 class="accordion__title title title_h6"
                    >Відділення <br />анестезіології з ліжками <br />інтенсивної
                    терапії</h6
                  >
                </div>
              </div>
              <!-- accordion button 2 -->
              <div class="accordion__header">
                <button
                  id="accordion-2"
                  class="accordion__button"
                  aria-expanded="false"
                  aria-controls="panel-2"
                  >Центр материнства і дитинства</button
                >
              </div>
              <!-- accordion content 2 -->
              <div
                id="panel-2"
                class="accordion__content"
                role="region"
                aria-labelledby="accordion-2"
              ></div>
              <!-- accordion button 3 -->
              <div class="accordion__header">
                <button
                  id="accordion-3"
                  class="accordion__button"
                  aria-expanded="false"
                  aria-controls="panel-3"
                  >Центр дитячої медицини</button
                >
              </div>
              <!-- accordion content 3 -->
              <div
                id="panel-3"
                class="accordion__content"
                role="region"
                aria-labelledby="accordion-3"
              ></div>
            </div>
            <!-- ./accordion -->
          </div>
        </section>
      </main>
      <!-- @import footer.html -->
      <script src="assets/js/app.min.js"></script>
    </div>
  </body>
</html>
